                       android:layout_height="25dp">

                       <Button
                           android:id="@+id/btn_quick_cart"
                           android:layout_width="60dp"
                           android:layout_height="25dp"
                           android:text="ADD"
                           android:background="@drawable/green_border_only"
                           android:textColor="@android:color/black"
                           />

                   </xyz.hanks.library.bang.SmallBangView>-->

            </LinearLayout>

